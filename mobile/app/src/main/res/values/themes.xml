<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textsubheader">
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textheader">
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textnormal">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textmini">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="circleImageView">
        <item name="cornerSize">50%</item>
    </style>
</resources>